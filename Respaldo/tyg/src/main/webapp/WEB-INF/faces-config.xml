<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<locale-config>
			<default-locale>es_MX</default-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>cde.publico.messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>net.giro.tyg.message</base-name>
			<var>msgTyg</var>
		</resource-bundle>
	</application>
	<managed-bean>
		<managed-bean-name>loginManager</managed-bean-name>
		<managed-bean-class>net.giro.navegador.LoginManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>appMediator</managed-bean-name>
		<managed-bean-class>net.giro.navegador.AppMediator</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>navegador</property-name>
			<value>#{navegador}</value>
		</managed-property>
		<managed-property>
			<property-name>loginManager</property-name>
			<value>#{loginManager}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>localeManager</managed-bean-name>
		<managed-bean-class>net.giro.navegador.LocaleManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navegador</managed-bean-name>
		<managed-bean-class>net.giro.navegador.Navegador</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>monedaAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.MonedaAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bancoAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.BancoAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cuentasBancariasAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.CuentasBancariasAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>SucursalesBancariasAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.SucursalesBancariasAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>monedasValoresAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.MonedasValoresAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>tasasAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.TasasAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>tiposTasasAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.TiposTasasAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>valoresTasasAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.ValoresTasasAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>formasDePagoAction</managed-bean-name>
		<managed-bean-class>net.giro.tyg.FormasDePagoAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<validator>
		<validator-id>email</validator-id>
		<validator-class>net.giro.plataforma.validator.EmailValidator</validator-class>
	</validator>
	<validator>
		<validator-id>contrasena</validator-id>
		<validator-class>net.giro.plataforma.validator.ContrasenaValidator</validator-class>
	</validator>
	<validator>
		<validator-id>valClaveValor</validator-id>
		<validator-class>net.giro.plataforma.validator.IdValorValidator</validator-class>
	</validator>
	<validator>
		<validator-id>strClaveValor</validator-id>
		<validator-class>net.giro.plataforma.validator.StrValorValidator</validator-class>
	</validator>
	<validator>
		<validator-id>SoloNum</validator-id>
		<validator-class>net.giro.plataforma.validator.SoloNumerosValidator</validator-class>
	</validator>
</faces-config>