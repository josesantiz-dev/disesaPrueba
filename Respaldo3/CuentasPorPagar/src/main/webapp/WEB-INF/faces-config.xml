<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xi="http://www.w3.org/2001/XInclude" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<locale-config>
			<default-locale>es_MX</default-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>cde.publico.messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>cde.publico.Entorno</base-name>
			<var>entorno</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>cde.publico.manuales</base-name>
			<var>manuales</var>
		</resource-bundle>
	</application>
	
	<managed-bean>
		<managed-bean-name>appMediator</managed-bean-name>
		<managed-bean-class>net.giro.navegador.AppMediator</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>navegador</property-name>
			<value>#{navegador}</value>
		</managed-property>
		<managed-property>
			<property-name>loginManager</property-name>
			<value>#{loginManager}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>localeManager</managed-bean-name>
		<managed-bean-class>net.giro.navegador.LocaleManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loginManager</managed-bean-name>
		<managed-bean-class>net.giro.navegador.LoginManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navegador</managed-bean-name>
		<managed-bean-class>net.giro.navegador.Navegador</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<!-- beanAction -->
	<managed-bean>
		<managed-bean-name>reegAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.beans.RegistroEgresosAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cajaAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.beans.CajasChicasAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>provAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.beans.ProvisionesAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>registroGastosAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.RegistroGastosAction</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cajaChicaAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.CajaChicaAction</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>provisionAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.ProvisionesCXPAction</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>movCuentasAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.MovimientosCuentasAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cajaChicaMovimientosAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.CajaChicaMovimientosAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>gastosComprobarAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.GastosComprobarAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>comprobacionGastosAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.ComprobacionGastosAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>gastosAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.GastosAction</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>progPagosAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.ProgramacionPagosAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>genReembolsoAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.GenerarReembolsoAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>autReembolsoAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.AutorizarReembolsoAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>devSobranteAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.DevolucionSobranteAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>transBancariaAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.TransferenciaBancariaAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>recursosAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.beans.RecursosAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>manualesAction</managed-bean-name>
		<managed-bean-class>net.giro.cxp.ManualesAction</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<validator>
		<validator-id>email</validator-id>
		<validator-class>net.giro.cxp.validator.EmailValidator</validator-class>
	</validator>
	<validator>
		<validator-id>contrasena</validator-id>
		<validator-class>net.giro.cxp.validator.ContrasenaValidator</validator-class>
	</validator>
	<validator>
		<validator-id>valClaveValor</validator-id>
		<validator-class>net.giro.cxp.validator.IdValorValidator</validator-class>
	</validator>
	<validator>
		<validator-id>strClaveValor</validator-id>
		<validator-class>net.giro.cxp.validator.StrValorValidator</validator-class>
	</validator>
	<validator>
		<validator-id>SoloNum</validator-id>
		<validator-class>net.giro.cxp.validator.SoloNumerosValidator</validator-class>
	</validator>
</faces-config>
