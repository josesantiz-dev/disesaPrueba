<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<application>
		<locale-config>
			<default-locale>es_MX</default-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>cde.plataforma.messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>cde.plataforma.Entorno</base-name>
			<var>entorno</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>cde.plataforma.maestro</base-name>
			<var>maestro</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>cde.plataforma.catalogo</base-name>
			<var>catalogo</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>cde.plataforma.reportes</base-name>
			<var>msgAdminProc</var>
		</resource-bundle>
	</application>
	
	<managed-bean>
		<managed-bean-name>appMediator</managed-bean-name>
		<managed-bean-class>net.giro.navegador.AppMediator</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>navegador</property-name>
			<value>#{navegador}</value>
		</managed-property>
		<managed-property>
			<property-name>loginManager</property-name>
			<value>#{loginManager}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>localeManager</managed-bean-name>
		<managed-bean-class>net.giro.navegador.LocaleManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loginManager</managed-bean-name>
		<managed-bean-class>net.giro.navegador.LoginManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navegador</managed-bean-name>
		<managed-bean-class>net.giro.navegador.Navegador</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>reportes</managed-bean-name>
		<managed-bean-class>net.giro.sesion.SesionProc</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<validator>
		<validator-id>email</validator-id>
		<validator-class>cde.plataforma.validator.EmailValidator</validator-class>
	</validator>
	<validator>
		<validator-id>contrasena</validator-id>
		<validator-class>cde.plataforma.validator.ContrasenaValidator</validator-class>
	</validator>
	<validator>
		<validator-id>valClaveValor</validator-id>
		<validator-class>cde.plataforma.validator.IdValorValidator</validator-class>
	</validator>
	<validator>
		<validator-id>strClaveValor</validator-id>
		<validator-class>cde.plataforma.validator.StrValorValidator</validator-class>
	</validator>
	<validator>
		<validator-id>SoloNum</validator-id>
		<validator-class>cde.plataforma.validator.SoloNumerosValidator</validator-class>
	</validator>
</faces-config>